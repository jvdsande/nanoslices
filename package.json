{
  "name": "nanoslices",
  "private": true,
  "version": "0.0.0",
  "repository": "https://github.com/jvdsande/nanoslices.git",
  "author": "Jérémie van der Sande <jeremie.vandersande@gmail.com>",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "yarn build:packages && tsc && vite build",
    "build:packages": "wsrun --stages build",
    "test": "vitest --run",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "precommit": "cp packages/core/README.md README.md",
    "release": "yarn build:packages && yarn changeset publish"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@mantine/core": "^6.0.13",
    "@mantine/hooks": "^6.0.13",
    "@nanostores/persistent": "^0.9.0",
    "@nanostores/react": "^0.7.1",
    "@redux-devtools/extension": "^3.2.5",
    "nanostores": "^0.9.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitejs/plugin-react": "^4.0.0",
    "changesets": "^1.0.2",
    "eslint": "^8.38.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "jsdom": "^22.1.0",
    "prettier": "^2.8.8",
    "typescript": "^5.0.2",
    "vite": "^4.3.9",
    "vitest": "^0.32.2",
    "wsrun": "^5.2.4"
  }
}
